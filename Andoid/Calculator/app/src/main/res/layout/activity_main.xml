<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="toto.calculator.MainActivity"
    android:background="#1cf90c"
    android:padding="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/btn7"
        android:background="@android:color/holo_purple"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:contextClickable="false"
        android:clickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btn8"
        android:background="@android:color/holo_blue_dark"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/btn9"
        android:background="@android:color/holo_purple"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn8"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/btn4"
        android:background="@android:color/holo_blue_dark"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/btn7"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/btn1"
        android:background="@android:color/holo_purple"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="."
        android:id="@+id/button7"
        android:background="#3a3838"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/btn5"
        android:background="@android:color/holo_purple"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/btn2"
        android:background="@android:color/holo_blue_dark"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/btn0"
        android:background="@android:color/holo_purple"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/btn6"
        android:background="@android:color/holo_blue_dark"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn5"
        android:layout_toEndOf="@+id/btn5" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btn3"
        android:background="@android:color/holo_purple"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/btn6"
        android:layout_toRightOf="@+id/btn5" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/button13"
        android:background="#3a3838"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn5"
        android:clickable="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:text="DEL"
        android:id="@+id/button14"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn9"
        android:background="#ea1224"
        android:textColor="#131313"
        android:textSize="36dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:text=":"
        android:id="@+id/button17"
        android:background="@android:color/holo_orange_dark"
        android:layout_below="@+id/button14"
        android:layout_toEndOf="@+id/btn9"
        android:textColor="#131313"
        android:textSize="36dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:text="x"
        android:id="@+id/button18"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/button17"
        android:layout_toEndOf="@+id/btn9"
        android:textColor="#171616"
        android:textSize="36dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:text="-"
        android:id="@+id/button19"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/button18"
        android:layout_alignStart="@+id/button18"
        android:textColor="#101010"
        android:textSize="36dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:text="+"
        android:id="@+id/button20"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/button19"
        android:layout_alignStart="@+id/button19"
        android:textSize="36dp"
        android:textColor="#131313" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textResult"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="#85efd1"
        android:layout_marginTop="90dp"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:textColor="#1405b9"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

</RelativeLayout>
